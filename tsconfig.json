{
  "compilerOptions": {    
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "jsx": "react-jsx",                                
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                     
    "allowJs": true,                                  
    "noEmit": true,                                   
    "isolatedModules": true,                        
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                    
  },
  "includ": ["src"]
}
